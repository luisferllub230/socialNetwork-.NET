@model socialNetwork.source.Core.Application.ViewModel.Users.UsersLoggingViewModel;

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Market</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="styl esheet" href="~/E_Market.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body class=" bg-dark text-white vh d-flex justify-content-center align-items-center">
    
    
    <div class="container">
        <main role="main" class="pb-3">

            <div class="d-flex justify-content-center">
                <div class="col-12 col-md-6">
                    <div class="card bg-dark border border-5 border-info">

                        <div class="card-body">
                            <div class="card-title mt-2 mb-5">
                               <h1 class="text-center">Logging</h1>
                            </div>
                            @Html.ValidationSummary(false,"", new {@class = "text-danger"})
                            <form method="post" asp-controller="Users" asp-action="logging">
                                <div class="mb-2">
                                    <label asp-for="UserName" class="form-label">User Name: </label>
                                    <input asp-for="UserName" class="form-control" required />
                                </div>

                                <div class="mb-2">
                                    <label asp-for="UsersPasswork" class="form-label">Users Password: </label>
                                    <input asp-for="UsersPasswork" class="form-control" required />
                                </div>

                                <div class="mt-5">
                                    <button type="submit" class="btn btn-outline-success col-12 mb-2">logging </button>
                                    <a class="btn btn-outline-info col-12" asp-controller="Users" asp-action="UserRegister" required>go to register</a>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
            
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>